<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <ai.neuronet.com.palavasmartcity.font.NeuroNetTextView
            android:id="@+id/textView_CustomAutoCompleteTextvIew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimen_18sp" />


        <ai.neuronet.com.palavasmartcity.views.CustomAutoCompleteTextvIew
            android:id="@+id/customAutoCompleteTextView_WithButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.52"
            android:background="@color/white"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/dimen_18sp" />

        <Button
            android:id="@+id/customAutoCompleteTextview_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:background="@color/white"
            android:text="@string/Update"
            android:textColor="@color/bg_color"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>